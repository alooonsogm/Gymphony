@{
    string nombreUser = Context.Session.GetObject<string>("NOMBREUSUARIO");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Gymphony</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --gymphony-dark: #0a1931;
            --gymphony-blue: #1c599e;
            --gymphony-light-blue: #3da5d9;
            --text-main: #f8f9fa;
            --text-muted: #adb5bd;
        }

        /* FONDO Y TEXTO GLOBAL */
        body, html {
            background-color: var(--gymphony-dark);
            color: var(--text-main);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        body {
            padding-top: 75px;
        }

        /* NAVBAR - ESTILO CRISTAL */
        .gymphony-navbar {
            background: rgba(10, 25, 49, 0.85) !important;
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border-bottom: 1px solid rgba(61, 165, 217, 0.2);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        /* LOGO DEL NAVBAR */
        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            letter-spacing: 1.5px;
            color: #ffffff !important;
            text-transform: uppercase;
        }

            .navbar-brand span {
                color: var(--gymphony-light-blue);
            }

        /* ENLACES DEL MENÚ */
        .nav-item {
            margin: 0 5px;
        }

        .nav-link {
            color: var(--text-muted) !important;
            font-weight: 500;
            letter-spacing: 0.5px;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .nav-link:hover, .nav-link:focus {
                background-color: rgba(61, 165, 217, 0.15);
                color: #ffffff !important;
                transform: translateY(-2px);
            }

        /* DISEÑO DEL MENÚ DESPLEGABLE (DROPDOWN) */
        .gymphony-dropdown {
            background: rgba(10, 25, 49, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(61, 165, 217, 0.25);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            padding: 0.5rem 0;
            margin-top: 10px !important;
        }

        .dropdown-item {
            color: var(--text-muted);
            font-weight: 500;
            padding: 0.5rem 1.5rem;
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: rgba(61, 165, 217, 0.15);
                color: var(--gymphony-light-blue);
            }

        .dropdown-divider {
            border-color: rgba(255, 255, 255, 0.1);
        }

        .dropdown-item-danger {
            color: #ff6b6b !important;
        }

            .dropdown-item-danger:hover {
                background-color: rgba(220, 53, 69, 0.15) !important;
                color: #ff4757 !important;
            }

        /* AVATAR DEL USUARIO (Actualizado para el icono) */
        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--gymphony-blue), var(--gymphony-light-blue));
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        /* BOTÓN DEL MENÚ (MÓVIL) */
        .navbar-toggler {
            border-color: rgba(61, 165, 217, 0.3);
        }

        .navbar-dark .navbar-toggler-icon {
            filter: invert(1) grayscale(100%) brightness(200%);
        }

        /* CONTENEDOR PRINCIPAL Y FOOTER */
        main {
            flex: 1;
            padding-bottom: 30px;
        }

        .gymphony-footer {
            background: rgba(10, 25, 49, 0.95);
            border-top: 1px solid rgba(61, 165, 217, 0.2);
            color: var(--text-muted);
            padding: 20px 0;
            margin-top: auto;
        }

            .gymphony-footer a {
                color: var(--gymphony-light-blue);
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .gymphony-footer a:hover {
                    color: #ffffff;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark gymphony-navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">GYM<span>PHONY</span></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-lg-5">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                                    </svg>
                                </div>
                                <span><strong>@nombreUser</strong></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end gymphony-dropdown" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Perfil">Ver Mi Perfil</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item dropdown-item-danger" asp-controller="Login" asp-action="Index">Cerrar Sesión</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="gymphony-footer text-center">
        <div class="container">
            &copy; 2026 - Gymphony Panel de Administración - <a>Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>